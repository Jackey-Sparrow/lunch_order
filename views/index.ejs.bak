<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/javascripts/bootstrap/css/bootstrap.css'/>

</head>
<body>
<div class="topLink"></div>
<div class="content">
    <h1><%= title %></h1>

    <h4>Welcome to order your lunch</h4>
    <% menus.forEach(function(menu){ %>
    <a class="menu" href="/submit/<%= menu.id %>">
        <div class="menu_img menu_element">
            <img src="<%= menu.imageUrl %>" alt="<%= menu.name %>"/>
        </div>
        <div class="menu_element menu_content">
            <span class="menu_name">
                <strong>菜式编号：</strong><%= menu.id %>
                <strong style="margin-left: 30px;">菜名：</strong><%= menu.name %>
                <strong style="margin-left: 30px;">价格：</strong><%= menu.price %> RMB
            </span>

            <p class="menu_description">
                <strong>描述：</strong>
                <span><%= menu.desc %></span>
            </p>
        </div>
    </a>
    <% }) %>
</div>
