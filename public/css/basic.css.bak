body {
    padding: 00px;
    margin: 0px;
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
    background: #e5e5e5 !important;
}

.content {
    padding: 40px;
}

.topLink {
    background: #363636;
    width: 100%;
    height: 3px;
}

.menu {
    width: 500px;
    height: 70px;
    float: left;
    background: #fcfcfc;
    margin: 10px 10px 10px 0px;
    cursor: pointer;
    border: 1px solid #fcfcfc;
    display: block;
    color: black;
}

.menu_element {
    float: left;
}

.menu_img {
    width: 60px;
    height: 60px;
    margin-right: 15px;
}
.menu_img img{
    width: 60px;
    height: 60px;
    margin-top: 5px;
    margin-left: 5px;
}
.menu_content {
    width: 420px;
    height: 70px;
}

.menu_content p {
    margin: 0px;
    padding: 0px;
}

.menu_name {
    height: 25px;
    line-height: 25px;
    font-size: 12px;
}

.menu_description {
    height: 45px;
    font-size: 10px;
}

.menu_description strong{
    width:50px;
    height: 45px;
    float: left;
}

.menu_description span{
    width:370px;
    height: 45px;
    float: left;
    overflow: hidden;
    display: inline-block;
}
.selected{
    border: 1px solid #fca700;
}